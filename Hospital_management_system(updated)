    ];
    
 var captainDetails = Doctor[Math.ceil(Math.random()*4)]
    
        function delme() {
            userDetail.set("name",document.getElementById("name").value);
            userDetail.set("fname",document.getElementById("fname").value);
            userDetail.set("cnic",document.getElementById("cnic").value);
            userDetail.set("select",document.getElementById("select").value);
            userDetail.set("payment",document.getElementById("payment").value);

document.write("<center><div class='col-6'><h1>Your Bill</h1><br><h3>Name: "+userDetail.get("name")+"</h3><h3>Father Name: "+userDetail.get("fname")+"</h3><h3>CNIC: "+userDetail.get("cnic")+"</h3><h3>Illness: "+userDetail.get("select")+"</h3><h3>Mr no.: "+barcode1+barcode2+barcode3+barcode4+"</h3><h3>Payment Method: "+userDetail.get("payment")+"</h3><h3>Doctor Name: "+captainDetails[0]+"</h3><h3>Ward No.: "+captainDetails[1]+"</h3><h3>Total Cost: "+captainDetails[2]+"</h3> </div></center>");
