    var barcode1 = Math.floor((Math.random() * 10) + 1);
    var barcode2 = Math.floor((Math.random() * 10) + 3);
    var barcode3 = Math.floor((Math.random() * 10) + 6);
    var barcode4 = Math.floor((Math.random() * 10) + 2);

    var userDetail = new Map();     
    var Doctor = [
        ["Hamza Jawed",2,2600],
        ["Zafar Ali",1,76000],
        ["Kanwar Ahad",3,102000],
        ["Muhammad Kamran",4,90000],
        ["Usama akram",5,52000],
